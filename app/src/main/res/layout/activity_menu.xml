<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4A0080"
    tools:context=".Menu">

    <!-- Botón "Exit" en la esquina superior izquierda -->
<Button
android:id="@+id/btnExit"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Exit"
android:textColor="@android:color/white"
android:textAllCaps="false"
android:backgroundTint="@android:color/transparent"
android:fontFamily="@font/madimione_regular"
android:textSize="16sp"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent"
android:layout_margin="16dp"/>

    <!-- TextView "USERNAME" en la esquina superior derecha -->
<TextView
android:id="@+id/tvUsername"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="USERNAME"
android:textColor="@android:color/white"
android:textSize="16sp"
android:textStyle="bold"
android:fontFamily="@font/madimione_regular"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintTop_toTopOf="parent"
android:layout_margin="16dp"/>

    <!-- Título "LUDOPATICS" centrado horizontalmente -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/jaini_regular"
        android:gravity="center"
        android:letterSpacing="0.2"
        android:text="LUDOPATICS"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnExit" />

    <!-- Contenedor de botones, centrado horizontalmente -->
    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="184dp"
        android:layout_height="344dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/transparent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/btnJugarSolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/transparent"
            android:backgroundTint="@android:color/darker_gray"
            android:fontFamily="@font/madimione_regular"
            android:text="JUGAR SOLO"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnMultijugador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/transparent"
            android:backgroundTint="@android:color/darker_gray"
            android:fontFamily="@font/madimione_regular"
            android:text="MULTIJUGADOR"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnHistorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/transparent"
            android:backgroundTint="@android:color/darker_gray"
            android:fontFamily="@font/madimione_regular"
            android:text="HISTORIAL"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnMiPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/transparent"
            android:backgroundTint="@android:color/darker_gray"
            android:fontFamily="@font/madimione_regular"
            android:text="MI PERFIL"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnComoJugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/transparent"
            android:backgroundTint="@android:color/darker_gray"
            android:fontFamily="@font/madimione_regular"
            android:text="CÓMO JUGAR"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Marcador para el GIF (puede ser un ImageView si ya tienes la imagen animada) -->

</androidx.constraintlayout.widget.ConstraintLayout>
