<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradientvertical"
    android:padding="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            android:contentDescription="Volver"
            android:layout_margin="8dp"/>

    <!-- ScrollView para hacer el contenido desplazable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Contenedor del contenido dentro del ScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título "CÓMO JUGAR" -->
            <TextView
                android:id="@+id/header_como_jugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/madimione_regular"
                android:text="CÓMO JUGAR"
                android:textColor="#FDFDFD"
                android:textSize="34sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"/>

            <!-- Primer Paso -->
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/madimione_regular"
                android:text="Primer Paso: \nElige un monto de dinero para apostar."
                android:textColor="@color/blanco"
                android:textSize="20sp"
                android:layout_marginBottom="12dp"/>

            <!-- Segundo Paso -->
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/madimione_regular"
                android:text="Segundo Paso:\nSelecciona una opción para apostar. \nSolo puedes asignar un monto por cada tipo de apuesta:\n· Color  \n· Par/Impar  \n· Número  \nPuedes apostar en varios tipos a la vez, eligiendo un monto para cada uno."
                android:textColor="@color/blanco"
                android:textSize="20sp"
                android:layout_marginBottom="12dp"/>

            <!-- Instrucción final -->
            <TextView
                android:id="@+id/instruccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/madimione_regular"
                android:text="Para cambiar tu apuesta:\nElige un nuevo monto y selecciona nuevamente el tipo de apuesta. Esto reemplazará la apuesta anterior de ese mismo tipo con el nuevo monto."
                android:textColor="@color/blanco"
                android:textSize="20sp"
                android:layout_marginBottom="62dp"/>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>